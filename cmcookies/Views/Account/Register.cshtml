@model cmcookies.Models.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null; // No usar el layout principal, desde que usaremos un diseño personalizado y asi podemos omitir el nav bar, footer, etc.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Cam Cookies</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/auth.css"/>
</head>
<body>
<div class="auth-wrapper">
    <div class="auth-container">
        <!-- LADO IZQUIERDO - HEADER CON GRADIENTE NARANJA -->
        <div class="auth-header">
            <div class="auth-header-content">
                <img src="~/images/logo.png" alt="Cam Cookies Logo"/>
                <h2>Crear una Cuenta</h2>
                <p>¡Unete a Cam Cookies y empieza a ordenar las mejores galletas! (๑*ᗜ*)</p>
            </div>
        </div>

        <!-- LADO DERECHO - FORMULARIO -->
        <div class="auth-body">
            <!-- Mostrar errores de validación generales -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="validation-summary-errors"></div>
            }

            <form asp-action="Register" method="post">
                <!--lo bueno de esto es que si se cambia la ruta del controller no se necesita actualizar la vista-->
                <!-- First Name -->
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label">Nombre</label>
                    <!-- para Generar automaticamente name y id del First Name, se envia el form y ASP.NET se encarga de llenarlo automaticamente el model.FirstName-->
                    <input asp-for="FirstName" class="form-control" placeholder="Su primer Nombre" autofocus/>
                    <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                    <!--Validaciones automaticas que se dan con ASP.NET, y muestra errores de validacion automatica, lee las anotaciones del ViewModel.-->
                </div>

                <!-- Last Name -->
                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Apellido</label>
                    <!---Para lo que sige en adelante la misma logica que First Name-->
                    <input asp-for="LastName" class="form-control" placeholder="Su apellido"/>
                    <span asp-validation-for="LastName" class="invalid-feedback"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="your@email.com"/>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>

                <!-- Phone Number 1 -->
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">Teléfono</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+505 8888 8888"/>
                    <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                </div>

                <!--Phone Number 2 (Optional)-->
                <div class="form-group">
                    <label asp-for="PhoneNumber2" class="form-label">Teléfono 2 (Opcional)</label>
                    <input asp-for="PhoneNumber2" class="form-control" placeholder="+505 7777 7767 (optional)"/>
                    <span asp-validation-for="PhoneNumber2" class="invalid-feedback"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" class="form-control" placeholder="Min. 8 caracteres"/>
                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar su contraseña"/>
                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-auth">Crear Cuenta</button>

                <!-- FOOTER dentro del formulario -->
                <div class="auth-footer">
                    <p>¿Ya tienes una cuenta?<a asp-action="Login" class="auth-link"> Ingresar</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts de validación -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

<!--Lo que hacen en resumen es:
jquery es una libreria de JavaScript base, el que le sigue valida los forms antes de ser enviados, el unbound... lee las anotaciones de HTML5 y data anotations automaticamente y sin ellos habria un flujo mas lento, lo que proporciona una mejor experiencia de usuario
-->