@model cmcookies.Models.ViewModels.Cookie.RecipeViewModel

@{
    ViewData["Title"] = "Editar Receta";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    decimal totalCost = Model.Ingredients.Sum(x => x.CostCalculated);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3">Receta Maestra: <span class="text-primary">@Model.CookieName</span></h1>
            <p class="text-muted">Define los materiales necesarios para producir <strong>1 Batch (20 galletas)</strong>.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Agregar Insumo</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddIngredient" method="post">
                        <input type="hidden" asp-for="CookieCode" />
                        
                        <div class="mb-3">
                            <label asp-for="NewMaterialId" class="form-label fw-bold"></label>
                            <select asp-for="NewMaterialId" asp-items="Model.MaterialsList" class="form-select">
                                <option value="">-- Seleccionar Material --</option>
                            </select>
                            <span asp-validation-for="NewMaterialId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewQuantity" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="NewQuantity" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                <span class="input-group-text">Unidades</span>
                            </div>
                            <div class="form-text small">Cantidad requerida para 20 galletas.</div>
                            <span asp-validation-for="NewQuantity" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Agregar a la Receta</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card bg-light border-0">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.CookieImage))
                    {
                        <img src="@Model.CookieImage" class="img-thumbnail rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" />
                    }
                    <h6 class="text-muted">Costo Estimado por Batch</h6>
                    <h2 class="text-success">@totalCost.ToString("C")</h2>
                    <p class="small text-muted">Costo por galleta: @((totalCost / 20).ToString("C"))</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-list-check"></i> Ingredientes Actuales</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Material</th>
                                <th>Cantidad</th>
                                <th>Costo Aprox.</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Ingredients)
                            {
                                <tr>
                                    <td class="fw-bold">@item.MaterialName</td>
                                    <td>
                                        <span class="badge bg-info text-dark" style="font-size: 0.9rem;">
                                            @item.Quantity @item.Unit
                                        </span>
                                    </td>
                                    <td>@item.CostCalculated.ToString("C")</td>
                                    <td class="text-end">
                                        <form asp-action="RemoveIngredient" method="post" onsubmit="return confirm('¿Quitar este ingrediente de la receta?');">
                                            <input type="hidden" name="id" value="@item.CookieMaterialId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Quitar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Ingredients.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        <i class="bi bi-basket display-6"></i>
                                        <p class="mt-2">Esta receta está vacía. ¡Agrega ingredientes!</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}