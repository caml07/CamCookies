@model cmcookies.Models.Cookie

@{
    ViewData["Title"] = "Eliminar Cookie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <h1 class="text-danger"><i class="bi bi-trash"></i> Eliminar Cookie</h1>
    <p class="text-muted">Esta acción no se puede deshacer</p>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="admin-card border-danger">
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>¿Estás seguro que deseas eliminar esta cookie?</strong>
            </div>
            
            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.CookieName" 
                         class="img-thumbnail mb-3" style="max-width: 200px;">
                }
            </div>
            
            <table class="table">
                <tr>
                    <th>Código:</th>
                    <td><strong>@Model.CookieCode</strong></td>
                </tr>
                <tr>
                    <th>Nombre:</th>
                    <td><strong>@Model.CookieName</strong></td>
                </tr>
                <tr>
                    <th>Descripción:</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <th>Precio:</th>
                    <td><strong class="text-success">C$@Model.Price.ToString("N2")</strong></td>
                </tr>
                <tr>
                    <th>Categoría:</th>
                    <td>
                        @if (Model.Category == "seasonal")
                        {
                            <span class="badge bg-warning text-dark">Seasonal</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Normal</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Stock:</th>
                    <td><span class="badge bg-secondary">@Model.Stock</span></td>
                </tr>
            </table>
            
            <form asp-action="Delete" asp-route-cookieCode="@Model.CookieCode" method="post">
                <input type="hidden" asp-for="CookieCode" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sí, Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>