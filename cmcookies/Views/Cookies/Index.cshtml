@model IEnumerable<cmcookies.Models.Cookie>

@{
    ViewData["Title"] = "Gestión de Cookies";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-cookie"></i> Gestión de Cookies</h1>
            <p class="text-muted">Administra el catálogo de galletas</p>
        </div>
        <a asp-action="Create" class="btn btn-lg admin-btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nueva Cookie
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle"></i> @Html.Raw(TempData["ErrorMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @Html.Raw(TempData["WarningMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="admin-card">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th style="width: 80px;">Imagen</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Estado</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var cookie in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(cookie.ImagePath))
                        {
                            <img src="@cookie.ImagePath" alt="@cookie.CookieName"
                                 class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                                 style="width: 60px; height: 60px; border-radius: 4px;">
                                <i class="bi bi-image"></i>
                            </div>
                        }
                    </td>
                    <td>
                        <strong>@cookie.CookieName</strong><br>
                        <small class="text-muted">@cookie.Description</small>
                    </td>
                    <td>
                        @if (cookie.Category == "seasonal")
                        {
                            <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill"></i> Seasonal
                                </span>
                        }
                        else
                        {
                            <span class="badge bg-info">
                                    <i class="bi bi-circle-fill"></i> Normal
                                </span>
                        }
                    </td>
                    <td><strong class="text-success">C$@cookie.Price.ToString("N2")</strong></td>
                    <td>
                        @if (cookie.Stock < 10)
                        {
                            <span class="badge bg-danger">@cookie.Stock</span>
                        }
                        else if (cookie.Stock < 30)
                        {
                            <span class="badge bg-warning text-dark">@cookie.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@cookie.Stock</span>
                        }
                    </td>
                    <td>
                        @if (cookie.IsActive == true)
                        {
                            <span class="badge bg-success">Activa</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactiva</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Recipe" asp-route-id="@cookie.CookieCode"
                               class="btn btn-sm btn-warning text-dark" title="Gestionar Receta">
                                <i class="bi bi-list-task"></i> Receta
                            </a>
                            <a asp-action="Edit" asp-route-cookieCode="@cookie.CookieCode"
                               class="btn btn-sm btn-outline-secondary" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-cookieCode="@cookie.CookieCode"
                               class="btn btn-sm btn-outline-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No hay cookies registradas</p>
                <a asp-action="Create" class="btn admin-btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Primera Cookie
                </a>
            </div>
        }
    </div>
</div>