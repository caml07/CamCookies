@model cmcookies.Models.ViewModels.Store.CheckoutViewModel

@{
    ViewData["Title"] = "Finalizar Pedido";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top-4" 
                     style="background: linear-gradient(135deg, #592c1c 0%, #8c4820 100%);">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-bag-check"></i> Checkout</h3>
                    <p class="mb-0 opacity-75">Estás a un paso de tus galletas</p>
                </div>
                
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <small class="text-muted d-block">TOTAL A PAGAR</small>
                            <span class="fs-4 fw-bold text-dark">@Model.TotalAmount.ToString("C")</span>
                        </div>
                        <div class="text-end">
                            <small class="text-muted d-block">ARTÍCULOS</small>
                            <span class="fs-5 fw-bold">@Model.TotalItems</span>
                        </div>
                    </div>

                    <form asp-action="Checkout" method="post">
                        <h5 class="mb-3 text-secondary">Tus Datos</h5>
                        
                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label small text-muted fw-bold">NOMBRE</label>
                            <input asp-for="CustomerName" class="form-control bg-light" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label small text-muted fw-bold">EMAIL</label>
                            <input asp-for="Email" class="form-control bg-light" readonly />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label small text-muted fw-bold">TELÉFONO <span class="text-danger">*</span></label>
                            <input asp-for="Phone" class="form-control form-control-lg" placeholder="Ej: 8888-8888" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                            <div class="form-text">Te contactaremos aquí cuando el pedido esté listo.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label small text-muted fw-bold">NOTAS (OPCIONAL)</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="¿Alguna instrucción especial?"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-dark fw-bold py-3 shadow-sm" 
                                    style="background-color: #f29f05; border: none;">
                                CONFIRMAR PEDIDO <i class="bi bi-arrow-right-circle-fill ms-2"></i>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver al Menú</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}