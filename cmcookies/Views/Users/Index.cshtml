@model List<(cmcookies.Models.User User, string Role, bool IsActive)>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    
    <!-- Header con estadísticas -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold">
                        <i class="bi bi-people-fill"></i> Gestión de Usuarios
                    </h2>
                    <p class="text-muted mb-0">Total de usuarios: <strong>@Model.Count</strong></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros rápidos -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary active" onclick="filterUsers('all')">
                    Todos (@Model.Count)
                </button>
                <button type="button" class="btn btn-outline-success" onclick="filterUsers('Admin')">
                    Admins (@Model.Count(u => u.Role == "Admin"))
                </button>
                <button type="button" class="btn btn-outline-info" onclick="filterUsers('Customer')">
                    Customers (@Model.Count(u => u.Role == "Customer"))
                </button>
                <button type="button" class="btn btn-outline-danger" onclick="filterUsers('inactive')">
                    Inactivos (@Model.Count(u => !u.IsActive))
                </button>
            </div>
        </div>
    </div>

    <!-- Tabla de usuarios -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Creado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-role="@item.Role" data-active="@item.IsActive.ToString().ToLower()">
                                <!-- ID -->
                                <td class="align-middle">
                                    <span class="badge bg-secondary">#@item.User.Id</span>
                                </td>
                                
                                <!-- Nombre completo -->
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @item.User.FirstName.Substring(0, 1)@item.User.LastName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.User.FirstName @item.User.LastName</div>
                                        </div>
                                    </div>
                                </td>
                                
                                <!-- Email -->
                                <td class="align-middle">
                                    <small class="text-muted">
                                        <i class="bi bi-envelope"></i> @item.User.Email
                                    </small>
                                </td>
                                
                                <!-- Rol -->
                                <td class="align-middle">
                                    @if (item.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-fill"></i> Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">
                                            <i class="bi bi-person"></i> Customer
                                        </span>
                                    }
                                </td>
                                
                                <!-- Estado -->
                                <td class="align-middle">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactivo
                                        </span>
                                    }
                                </td>
                                
                                <!-- Fecha de creación -->
                                <td class="align-middle">
                                    <small class="text-muted">
                                        @item.User.CreatedAt?.ToString("dd/MM/yyyy")
                                    </small>
                                </td>
                                
                                <!-- Acciones -->
                                <td class="align-middle text-center">
                                    <div class="btn-group btn-group-sm">
                                        <!-- Botón Editar -->
                                        <a asp-action="Edit" asp-route-id="@item.User.Id" 
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        
                                        <!-- Botón Eliminar -->
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="confirmDelete(@item.User.Id, '@item.User.FirstName @item.User.LastName')"
                                                title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle"></i> No hay usuarios registrados.
        </div>
    }

</div>

<!-- Form oculto para eliminar (submit desde JS) -->
<form id="deleteForm" asp-action="Delete" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteUserId" name="id" />
</form>

@section Scripts {
    <script>
        // ============================================================
        // FILTRAR USUARIOS POR ROL/ESTADO
        // ============================================================
        function filterUsers(filter) {
            const rows = document.querySelectorAll('tbody tr');
            
            // Actualizar botones activos
            document.querySelectorAll('.btn-group button').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Mostrar/ocultar filas
            rows.forEach(row => {
                const role = row.getAttribute('data-role');
                const isActive = row.getAttribute('data-active') === 'true';
                
                if (filter === 'all') {
                    row.style.display = '';
                } else if (filter === 'inactive') {
                    row.style.display = !isActive ? '' : 'none';
                } else {
                    row.style.display = role === filter ? '' : 'none';
                }
            });
        }

        // ============================================================
        // CONFIRMAR ELIMINACIÓN
        // ============================================================
        function confirmDelete(userId, userName) {
            if (confirm(`¿Estás seguro de eliminar a "${userName}"?\n\n⚠ ESTA ACCIÓN NO SE PUEDE DESHACER.\n\nSe eliminarán:\n- Su cuenta\n- Sus pedidos\n- Sus datos personales`)) {
                document.getElementById('deleteUserId').value = userId;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
    
    <style>
        /* Avatar circle con iniciales */
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #f29f05, #f28705);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 0.9rem;
        }
        
        /* Hover en las filas */
        tbody tr:hover {
            background-color: #fff8e6 !important;
        }
    </style>
}