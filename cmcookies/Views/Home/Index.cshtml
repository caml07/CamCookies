@{
    ViewData["Title"] = "Cam Cookies - Home";
}

<style>
    /* ============================================================================
       HERO SECTION - Banner Principal con Imagen de Fondo
       ============================================================================ */
    .hero-section {
        background: linear-gradient(rgba(89, 44, 28, 0.7), rgba(89, 44, 28, 0.7)),
                    url('@Url.Content("~/images/backgrounds/bg1.jpg")') center/cover no-repeat fixed;
        min-height: 600px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .hero-content h1 {
        font-size: 4rem;
        font-weight: 900;
        text-shadow: 3px 3px 6px rgba(0,0,0,0.5);
        margin-bottom: 1.5rem;
        animation: fadeInDown 1s ease-out;
    }

    .hero-content p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        animation: fadeInUp 1s ease-out 0.3s both;
    }

    .hero-buttons {
        animation: fadeInUp 1s ease-out 0.6s both;
    }

    .hero-buttons .btn {
        margin: 0.5rem;
        padding: 1rem 2.5rem;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

    .btn-hero-primary {
        background: #f29f05;
        color: white;
        border: none;
    }

    .btn-hero-primary:hover {
        background: #f28705;
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(242, 159, 5, 0.4);
    }

    .btn-hero-secondary {
        background: transparent;
        color: white;
        border: 3px solid white;
    }

    .btn-hero-secondary:hover {
        background: white;
        color: #592c1c;
        transform: translateY(-3px);
    }

    /* ============================================================================
       SECCIÓN: QUIÉNES SOMOS
       ============================================================================ */
    .about-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, #fef5e7 0%, #fff8e6 100%);
    }

    .section-title {
        text-align: center;
        font-size: 3rem;
        font-weight: 900;
        color: #592c1c;
        margin-bottom: 1rem;
        position: relative;
    }

    .section-title::after {
        content: '';
        display: block;
        width: 100px;
        height: 4px;
        background: #f29f05;
        margin: 1rem auto;
        border-radius: 2px;
    }

    .about-text {
        font-size: 1.3rem;
        line-height: 1.8;
        color: #8c4820;
        text-align: center;
        max-width: 900px;
        margin: 0 auto;
    }

    /* ============================================================================
       SECCIÓN: POR QUÉ ELEGIRNOS
       ============================================================================ */
    .features-section {
        padding: 5rem 0;
        background: white;
    }

    .feature-card {
        text-align: center;
        padding: 2rem;
        border-radius: 15px;
        transition: transform 0.3s;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .feature-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #592c1c;
        margin-bottom: 1rem;
    }

    .feature-description {
        color: #8c4820;
        font-size: 1rem;
    }

    /* ============================================================================
       SECCIÓN: NUESTRAS FAVORITAS
       ============================================================================ */
    .cookies-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, #fff8e6 0%, #fef5e7 100%);
    }

    .cookie-showcase {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s;
        text-align: center;
        height: 100%;
    }

    .cookie-showcase:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(242, 159, 5, 0.3);
    }

    .cookie-showcase img {
        width: 200px;
        height: 200px;
        object-fit: contain;
        margin-bottom: 1.5rem;
        filter: drop-shadow(0 5px 10px rgba(0,0,0,0.2));
    }

    .cookie-name {
        font-size: 1.8rem;
        font-weight: bold;
        color: #592c1c;
        margin-bottom: 0.5rem;
    }

    .cookie-price {
        font-size: 1.5rem;
        color: #f29f05;
        font-weight: bold;
    }

    /* ============================================================================
       SECCIÓN: UBICACIÓN (MAPA)
       ============================================================================ */
    .location-section {
        padding: 5rem 0;
        background: white;
    }

    .map-container {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        height: 450px;
    }

    .map-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    /* ============================================================================
       SECCIÓN: CONTACTO
       ============================================================================ */
    .contact-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, #f29f05 0%, #f28705 100%);
        color: white;
    }

    .contact-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 3rem;
        text-align: center;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .contact-card h3 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .contact-btn {
        display: inline-block;
        padding: 1rem 3rem;
        margin: 1rem;
        background: white;
        color: #592c1c;
        border-radius: 50px;
        font-weight: bold;
        font-size: 1.2rem;
        text-decoration: none;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .contact-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        color: #592c1c;
    }

    .contact-btn i {
        margin-right: 0.5rem;
    }

    /* ============================================================================
       SECCIÓN: CALL-TO-ACTION FINAL
       ============================================================================ */
    .cta-section {
        padding: 5rem 0;
        background: linear-gradient(rgba(89, 44, 28, 0.9), rgba(89, 44, 28, 0.9)),
                    url('@Url.Content("~/images/backgrounds/bg2.jpg")') center/cover no-repeat fixed;
        text-align: center;
        color: white;
    }

    .cta-section h2 {
        font-size: 3rem;
        font-weight: 900;
        margin-bottom: 2rem;
    }

    .cta-section .btn {
        padding: 1.5rem 4rem;
        font-size: 1.5rem;
        font-weight: bold;
        background: #f29f05;
        color: white;
        border: none;
        border-radius: 50px;
        text-transform: uppercase;
        transition: all 0.3s;
    }

    .cta-section .btn:hover {
        background: #f28705;
        transform: scale(1.1);
        box-shadow: 0 10px 30px rgba(242, 159, 5, 0.5);
    }

    /* ============================================================================
       ANIMACIONES
       ============================================================================ */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ============================================================================
       RESPONSIVE
       ============================================================================ */
    @@media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem;
        }
        .hero-content p {
            font-size: 1.2rem;
        }
        .section-title {
            font-size: 2rem;
        }
        .about-text {
            font-size: 1.1rem;
        }
    }
</style>

<!-- ============================================================================
     HERO SECTION - Banner Principal
     ============================================================================ -->
