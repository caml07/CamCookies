@model IEnumerable<cmcookies.Models.Batch>

@{
    ViewData["Title"] = "Historial de Producci√≥n";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">üè≠ Historial de Producci√≥n</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-sm btn-warning text-dark fw-bold">
            <i class="bi bi-plus-lg"></i> Nuevo Batch
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th># Batch</th>
                        <th>Galleta</th>
                        <th>Cantidad</th>
                        <th>Costo Total</th>
                        <th>Fecha de Producci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.BatchId</td>
                            <td class="fw-bold text-primary">@item.Cookie.CookieName</td>
                            <td><span class="badge bg-secondary">@item.QtyMade un.</span></td>
                            <td>@item.TotalCost?.ToString("C")</td>
                            <td>@item.ProducedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-3">No se han registrado producciones a√∫n.</p>
                </div>
            }
        </div>
    </div>
</div>