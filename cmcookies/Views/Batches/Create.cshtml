@model cmcookies.Models.ViewModels.Batch.BatchCreateViewModel

@{
    ViewData["Title"] = "Producir Nuevo Batch";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0"><i class="bi bi-fire"></i> Producción: Nuevo Batch</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Un batch produce automáticamente <strong>20 galletas</strong> y descuenta los materiales necesarios del inventario.
                    </div>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="CookieCode" class="form-label fw-bold"></label>
                            <select asp-for="CookieCode" class="form-select form-select-lg" asp-items="Model.CookiesList">
                                <option value="">-- Selecciona una receta --</option>
                            </select>
                            <span asp-validation-for="CookieCode" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-dark fw-bold">
                                <i class="bi bi-gear-wide-connected"></i> PRODUCIR BATCH
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}