@model cmcookies.Models.ViewModels.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-container">
    <div class="container">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 style="color: #592c1c; font-weight: 700;">
                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                </h1>
                <p style="color: #8c4820;">Bienvenido al panel de administraci√≥n de Cam Cookies</p>
            </div>
        </div>

        <!-- ESTAD√çSTICAS FINANCIERAS -->
        <div class="row">
            <div class="col-md-4">
                <div class="stat-card">
                    <h3>Total Revenue</h3>
                    <div class="value">C$@Model.TotalRevenue.ToString("N2")</div>
                    <div class="label">Ingresos totales</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h3>Total Costs</h3>
                    <div class="value">C$@Model.TotalCosts.ToString("N2")</div>
                    <div class="label">Costos de producci√≥n</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card @(Model.NetProfit >= 0 ? "profit-positive" : "profit-negative")">
                    <h3>Net Profit</h3>
                    <div class="value">C$@Model.NetProfit.ToString("N2")</div>
                    <div class="label">Ganancia neta</div>
                </div>
            </div>
        </div>

        <!-- CONTADORES DE PEDIDOS Y GALLETAS -->
        <div class="row">
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>Total Orders</h3>
                    <div class="value">@Model.TotalOrders</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>Pending</h3>
                    <div class="value">@Model.PendingOrders</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>Completed</h3>
                    <div class="value">@Model.CompletedOrders</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>Total Cookies</h3>
                    <div class="value">@Model.TotalCookies</div>
                    @if (Model.LowStockCookies > 0)
                    {
                        <div class="label text-danger">‚ö†Ô∏è @Model.LowStockCookies low stock</div>
                    }
                </div>
            </div>
        </div>

        <!-- GALLETA M√ÅS VENDIDA -->
        <h2 class="section-title">üç™ Best-Selling Cookie</h2>
        @if (Model.TopSellingCookies.Any())
        {
            var topCookie = Model.TopSellingCookies.First();
            <div class="row">
                <div class="col-md-12">
                    <div class="stat-card" style="border-left-width: 6px;">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h3 style="font-size: 1.2rem; margin-bottom: 0.5rem;">üëë #1 BEST SELLER</h3>
                                <div class="value" style="font-size: 2rem;">@topCookie.CookieName</div>
                            </div>
                            <div class="col-md-4 text-center">
                                <h3>Units Sold</h3>
                                <div class="value">@topCookie.TotalSold</div>
                                <div class="label">total cookies</div>
                            </div>
                            <div class="col-md-4 text-center">
                                <h3>Total Revenue</h3>
                                <div class="value text-success">
                                    C$@topCookie.TotalRevenue.ToString("N2")</div>
                                <div class="label">from this cookie</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No sales data available yet.
            </div>
        }

        <!-- TOP 5 CLIENTES -->
        <h2 class="section-title">üë• Top 5 Customers</h2>
        @if (Model.TopCustomers.Any())
        {
            <div class="table-responsive">
                <table class="table custom-table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Total Orders</th>
                        <th>Total Spent</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (var i = 0; i < Model.TopCustomers.Count; i++)
                    {
                        var customer = Model.TopCustomers[i];
                        <tr>
                            <td><strong>@(i + 1)</strong></td>
                            <td>@customer.CustomerName</td>
                            <td>@customer.Email</td>
                            <td>@customer.TotalOrders</td>
                            <td class="text-success fw-bold">C$@customer.TotalSpent.ToString("N2")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No customer data available yet.
            </div>
        }

        <!-- √öLTIMOS 10 PEDIDOS -->
        <h2 class="section-title">üì¶ Recent Orders</h2>
        @if (Model.RecentOrders.Any())
        {
            <div class="table-responsive">
                <table class="table custom-table">
                    <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td><strong>#@order.OrderId</strong></td>
                            <td>@order.CustomerName</td>
                            <td class="fw-bold">C$@order.TotalAmount.ToString("N2")</td>
                            <td>
                                <span class="badge badge-@order.Status">
                                    @order.Status.ToUpper()
                                </span>
                            </td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No orders yet.
            </div>
        }

        <!-- ALERTAS DE STOCK BAJO -->
        @if (Model.LowStockAlerts.Any())
        {
            <h2 class="section-title">‚ö†Ô∏è Low Stock Alerts</h2>
            <div class="row">
                @foreach (var alert in Model.LowStockAlerts)
                {
                    <div class="col-md-6">
                        <div class="alert alert-danger">
                            <strong>@alert.ItemType:</strong> @alert.ItemName
                            <br>
                            <small>Current stock: @alert.CurrentStock @alert.Unit</small>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
