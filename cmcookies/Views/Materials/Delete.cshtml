@model cmcookies.Models.Material

@{
  ViewData["Title"] = "Eliminar Material";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
          <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h4>
        </div>
        <div class="card-body">
          <p class="lead">¿Estás seguro que deseas eliminar el siguiente material?</p>

          <div class="alert alert-warning">
            <h4 class="alert-heading">@Model.Name</h4>
            <p class="mb-0">Stock actual: <strong>@Model.Stock @Model.Unit</strong></p>
            <p class="mb-0">Costo: <strong>@Model.UnitCost.ToString("C")</strong></p>
          </div>

          <p class="text-danger small">
            <strong>Advertencia:</strong> Si este material está siendo usado en una receta (CookieMaterial), podrías
            causar errores de integridad referencial o perder esa información.
          </p>

          <form asp-action="Delete">
            <input type="hidden" asp-for="MaterialId"/>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
              <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>