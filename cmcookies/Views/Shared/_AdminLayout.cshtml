<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Cam Cookies Admin</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <!-- Bootstrap Icons (para los iconos del menú) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- CSS de la aplicación -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true"/>

    <!-- ⭐ NUEVO: CSS con paleta otoño para TODAS las páginas del admin -->
    <link rel="stylesheet" href="~/css/admin-colors.css" asp-append-version="true"/>
</head>
<body class="admin-page">
<!-- Wrapper principal del Admin -->
<div class="admin-wrapper">

    <!-- ============================================
         SIDEBAR - Menú lateral de navegación
         ============================================ -->
    <aside class="admin-sidebar">
        <!-- Logo/Header del Admin -->
        <div class="admin-sidebar-header">
            <img src="~/images/logo.png" alt="Cam Cookies Logo" class="admin-logo"/>
            <p>Admin Panel</p>
        </div>

        <!-- Navegación principal -->
        <nav class="admin-nav">
            <!-- Dashboard -->
            <a href="@Url.Action("Dashboard", "Admin")"
               class="admin-nav-item @(Context.Request.Path.Value.Contains("/Admin/Dashboard") ? "active" : "")">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>

            <!-- Sección: Cookies -->
            <div class="admin-nav-section">
                <div class="admin-nav-section-title">
                    <i class="bi bi-cookie"></i> Cookies
                </div>
                <a href="@Url.Action("Index", "Cookies")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Cookies/Index") ? "active" : "")">
                    <i class="bi bi-list-ul"></i>
                    <span>Ver Todas</span>
                </a>
                <a href="@Url.Action("Create", "Cookies")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Cookies/Create") ? "active" : "")">
                    <i class="bi bi-plus-circle"></i>
                    <span>Crear Nueva</span>
                </a>
            </div>

            <!-- Sección: Materials -->
            <div class="admin-nav-section">
                <div class="admin-nav-section-title">
                    <i class="bi bi-box-seam"></i> Materials
                </div>
                <a href="@Url.Action("Index", "Materials")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Materials/Index") ? "active" : "")">
                    <i class="bi bi-list-ul"></i>
                    <span>Ver Todos</span>
                </a>
                <a href="@Url.Action("Create", "Materials")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Materials/Create") ? "active" : "")">
                    <i class="bi bi-plus-circle"></i>
                    <span>Crear Nuevo</span>
                </a>
            </div>

            <!-- Sección: Batches (Producción) -->
            <div class="admin-nav-section">
                <div class="admin-nav-section-title">
                    <i class="bi bi-gear-fill"></i> Production
                </div>
                <a href="@Url.Action("Create", "Batches")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Batches/Create") ? "active" : "")">
                    <i class="bi bi-plus-circle-fill"></i>
                    <span>New Batch</span>
                </a>
                <a href="@Url.Action("Index", "Batches")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Batches/Index") ? "active" : "")">
                    <i class="bi bi-clock-history"></i>
                    <span>History</span>
                </a>
            </div>

            <!-- Sección: Orders -->
            <div class="admin-nav-section">
                <div class="admin-nav-section-title">
                    <i class="bi bi-cart-check-fill"></i> Orders
                </div>
                <a href="@Url.Action("Index", "Orders")"
                   class="admin-nav-item admin-nav-subitem @(Context.Request.Path.Value.Contains("/Orders") ? "active" : "")">
                    <i class="bi bi-list-check"></i>
                    <span>Manage Orders</span>
                </a>
            </div>
        </nav>

        <!-- User info en el footer del sidebar -->
        <div class="admin-sidebar-footer">
            <div class="admin-user-info">
                <i class="bi bi-person-circle"></i>
                <div>
                    <div class="admin-user-name">@User.Identity?.Name</div>
                    <div class="admin-user-role">Administrator</div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-outline-light mt-2 w-100">
                <i class="bi bi-house-door"></i> Volver al Sitio
            </a>
        </div>
    </aside>

    <!-- ============================================
         MAIN CONTENT - Contenido principal
         ============================================ -->
    <main class="admin-main">
        <!-- Topbar con breadcrumbs -->
        <div class="admin-topbar">
            <div class="admin-breadcrumb">
                @if (ViewData["Breadcrumb"] != null)
                {
                    @Html.Raw(ViewData["Breadcrumb"])
                }
                else
                {
                    <span>@ViewData["Title"]</span>
                }
            </div>
            <div class="admin-topbar-actions">
                    <span class="me-3">
                        <i class="bi bi-person-badge"></i> @User.Identity?.Name
                    </span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <!-- Contenido de la página -->
        <div class="admin-content">
            @RenderBody()
        </div>
    </main>
</div>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>
