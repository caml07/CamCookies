@using cmcookies.Extensions
@using cmcookies.Models.Store
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Cam Cookies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/cmcookies.styles.css" asp-append-version="true"/>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Navbar: Texto más compacto */
        .navbar-nav .nav-link {
            font-size: 0.9rem;
            padding: 0.5rem 0.8rem;
        }
        .user-greeting {
            font-size: 0.85rem;
        }
        /* Hacer el ícono del carrito un poco más pequeño */
        .navbar-nav .nav-link i.bi-cart-fill {
            font-size: 1.3rem;
        }
    </style>
</head>
<body>
<div class="content-wrapper">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <!-- Logo - Lleva a Home -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" title="Go to Home">
                    <img src="~/images/logo.png" alt="Cam Cookies Logo"
                         style="height: 60px; width: auto; filter: brightness(0) invert(1);"/>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Mostrar link de Admin solo si el usuario es Admin *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">(⌐ロ⌓ロ)" Admin Dashboard</a>
                            </li>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index">Menú ( ˶ˆᗜˆ˵ )</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="Store" asp-action="MyOrders">
                                    <i class="bi bi-clock-history"></i> Mis Pedidos ((っ˘ڡ˘ς)
                                </a>
                            </li>
                        }
                    </ul>

                    @* Botón del Carrito *@
                    @{
                        var cart = Context.Session.Get<List<CartItem>>("Cart") ?? new List<CartItem>();
                        var cartItemCount = cart.Sum(x => x.Quantity);
                    }
                    <ul class="navbar-nav me-3">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Store" asp-action="Checkout" 
                               style="color: #f29f05; font-size: 1.5rem;" 
                               title="Ver Carrito">
                                <i class="bi bi-cart-fill"></i>
                                @if (cartItemCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill" 
                                          style="background-color: #f28705; color: white; font-size: 0.75rem;">
                                        @cartItemCount
                                        <span class="visually-hidden">items en carrito</span>
                                    </span>
                                }
                            </a>
                        </li>
                    </ul>

                    @* Sección de autenticación - derecha del navbar *@
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* Usuario está logueado *@
                            <li class="nav-item">
                                <span class="nav-link user-greeting">Hello, @User.Identity.Name ◝(^⌣^)◜</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            @* Usuario NO está logueado *@
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login ヾ(＾ ∇ ＾).</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">(•˕ •マ.ᐟ Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="footer">
    <div class="container">
        <span>&copy; 2025 Cam Cookies</span>
        <span>|</span>
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>